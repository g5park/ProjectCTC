<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.georgepark.projectctc.MainActivity">

    <TextView
        android:id="@+id/welcomeText"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:textSize="50dp"
        android:text="Welcome!"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/adminButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="admin" />

    <Button
        android:id="@+id/clientButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="client"
        android:layout_below="@+id/adminButton"
        android:layout_alignStart="@+id/adminButton" />

    <EditText
        android:id="@+id/username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="username"
        android:layout_marginTop="68dp"
        android:visibility="invisible"
        android:layout_below="@+id/clientButton"
        android:layout_centerHorizontal="true"
        android:maxLines="1"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="password"
        android:id="@+id/password"
        android:visibility="invisible"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/username"
        android:layout_alignStart="@+id/username"
        android:inputType="textPassword"
        android:maxLines="1"/>

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/clientButton"
        android:layout_below="@+id/password"
        android:text="done"
        android:visibility="invisible" />


</RelativeLayout>
